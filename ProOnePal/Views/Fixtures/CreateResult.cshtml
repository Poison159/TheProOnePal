@model ProOnePal.Models.Result

<div id="ResultForm">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Result</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.fixtureId)
            <div class="form-group">
                <p>@ViewBag.homeTeam goals</p>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.homeGoals, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.homeGoals, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <p>@ViewBag.awayTeam goals</p>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.awayaGoals, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.awayaGoals, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
</div>
<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
}