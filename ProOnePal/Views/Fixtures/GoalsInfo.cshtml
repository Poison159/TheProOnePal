@model ProOnePal.Models.Result

<div class="jumbotron">
    <p style="font-family:'Segoe Print'; padding-top:0px; font-size:larger" class="text-center top-right">Result Scorers</p>
</div>
<div class="row">
    <div class="col-md-3">

        <div class="label-danger">
            <p>@ViewBag.homeError</p>
        </div>

        @using (Html.BeginForm("GoalsInfo", "Fixtures", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                @Html.Label(Model.fixture.homeTeam, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("homePlayersId", null, htmlAttributes: new { @class = "form-control col-md-2", @name = "PlayersId" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Add scorer" class="btn btn-default" />
                </div>
            </div>

       }
    </div>

    <div class="col-md-3">

        <div class="label-danger">
            <p>@ViewBag.awayError</p>
        </div>

        @using (Html.BeginForm("GoalsInfo", "Fixtures", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                @Html.Label(Model.fixture.awayTeam, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("awayPlayersId", null, htmlAttributes: new { @class = "form-control", @name = "PlayersId" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Add scorer" class="btn btn-default" />
                </div>
            </div>

        }
    </div>
    
    
    <div class="col-md-3" id="imageHolder" style="padding-left :20px; padding-right:100px;">
        <img id="playersImage" src="" style="height:200px; width:200px; border-radius:50px; padding-top :20px;" />
    </div>
    

    <div id="Details" class="col-md-3">
        <h3 style="font-family:'Segoe Print'">Goal Scorers</h3>
        <hr />
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Kasi
                </th>
            </tr>

            @foreach (var plResultStat in Model.scorers)
            {
                <tr>
                    <td style="font-family:'Segoe Print'">
                        <a href="@Url.Action("Details", "Player", new { id = plResultStat.playerId })">@plResultStat.player.name</a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => plResultStat.player.age)
                    </td>
                </tr>
            }
        </table>
    </div>
</div>

<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/Scripts/AddPlayeScript.js"></script>

