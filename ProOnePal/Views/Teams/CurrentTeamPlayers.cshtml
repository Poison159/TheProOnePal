@model IEnumerable<ProOnePal.Models.Player>

@{
    ViewBag.Title = "CurrentTeamPlayers";
}

<div class="jumbotron">
    <p style="font-family:'Segoe Print'; padding-top:0px; font-size:larger" class="text-center top-right">@Model.ElementAt(0).team.name's players</p>
</div>


<p>
    @Html.ActionLink("Create Another " + Model.First().team.name + " Player", "AddPlayer", new  {id = Model.First().teamId })
</p>
<table class="table table-striped table-condensed table table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.age)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.position)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.position)
            </td>
            <td>
                <a href="@Url.Action("Edit", "Players",new { id = item.Id })">Edit</a> |
                <a href="@Url.Action("Details", "Players",new { id = item.Id })" >Details</a> |
                <a href="@Url.Action("Delete", "Players",new { id = item.Id })">Delete</a>
            </td>
        </tr>
    }

</table>


