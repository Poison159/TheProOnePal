@model ProOnePal.Models.Tournament

<div class="jumbotron">
    <p style="font-family:'Segoe Print'; padding-top:0px; font-size:larger" class="text-center top-right">Add team to @Model.name tournament</p>
</div>
<div class="notice">
    <p class="label-success">@ViewBag.success</p>
    <p class="label-danger">@ViewBag.error</p>
</div>
<div class="row">
    <div class="col-md-6">
        @using (Html.BeginForm("AddTeam", "Tournaments", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                @Html.Label("Team", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("teamId", null, htmlAttributes: new { @class = "form-control", @onchage = "selectedImage" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Add team" class="btn btn-default" />
                </div>
            </div>

        }
        <hr />
        <div id="imageHolder" style="padding-left :100px;">
            <img id="teamsImage" src="" style="height:300px; width:300px; border-radius:50px; padding-top :20px;" />
        </div>
        
    </div>
   
    
    <div id="Details" class="col-md-6">
        <h3 style="font-family:'Segoe Print'">Teams in tournament </h3>
        <hr />
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Kasi
                </th>
                <th>
                    
                </th>
            </tr>

            @foreach (var team in Model.enteredTeams)
            {
                <tr>
                    <td style="font-family:'Segoe Print'">
                        <a href="@Url.Action("Details", "Teams", new { id = team.id })">@team.name</a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => team.kasi)
                    </td>
                    <td class="btn-group-xs" style="font-family:'Segoe Print'">
                        <div class="btn btn-danger glyphicon " style="width:80px; border-radius:10px;">
                            <a class="glyphicon-remove text-center" href="@Url.Action("RemoveTeam", "Tournaments", new { id = team.id, name = Model.name })"></a>
                        </div>
                    </td>
                </tr>
            }
        </table>
        <a href="@Url.Action("index", "Tournaments")" class="btn btn-primary ">back to Tournaments</a>
        <a href="@Url.Action("index", "Teams")" class="btn btn-primary">view full</a>
    </div>
</div>
<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/Scripts/AddTeamScript.js"></script>

